div.post.col-md-12(ng-repeat='post in posts | filter: search')
  div.col-md-6
    img(src='images/{{post.image}}.png')
  div.options.col-md-6
    h3 {{post.title}}
    div {{post.text}}
    a(href='/readPost/{{post.id}}') مشاهده
    |   
    a(href='/editPost/{{post.id}}') ویرایش
    |   
    a(href='/deletePost/{{post.id}}') حذف
